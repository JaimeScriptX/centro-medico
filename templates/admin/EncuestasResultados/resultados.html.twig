{% extends 'gestionmedicos.html.twig' %}

{% block contenido %}


<div class="container" style="margin-top:30px; margin-left:10px">
  <h2>Resultados generales</h2>
  <p>Resultados de las preguntas realizadas</p>
</div>
<div class="container">

<table class="table table-striped table-hover" style="width:97%; margin-top:30px;">
  <thead class="table-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Pregunta</th>
      <th scope="col">Respuesta</th>
      <th scope="col">Fecha</th>
      <th scope="col">Hora</th>
      <th scope="col">Usuario</th>
    </tr>
  </thead>
  <tbody>
  {% set counter = 0 %}
    {% for resultado in resultados %}
        {% set counter = counter + 1 %}
    <tr>
      <td>{{counter}}</td>
      <td>{{resultado.pregunta}}</td>
      <td>{{resultado.respuesta}}</td>
      <td>{{resultado.fecha}}</td>
      <td>{{resultado.hora}}</td>
      <td>{{resultado.email}}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>


<h1>Porcentajes de las repuestas generales m√°s usadas</h1>
<table class="table table-striped table-hover" style="width:87%; margin-top:30px;">
<thead class="table-dark">
    <tr>
      <th scope="col">Respuesta</th>
      <th scope="col">Porcentaje</th>
    </tr>
  </thead>
  <tbody>
        {% for porcentaje in porcentajes %}
  <tr>
      <td>{{porcentaje.respuesta}}</td>
      <td>{{porcentaje.porcentaje}}%</td>
      {% endfor %}
  </tr>
  </tbody>
</table>
</div>

{% endblock %}