{% extends 'gestionmedicos.html.twig' %}

{% block contenido %}


<div class="container" style="margin-top:30px; margin-left:10px">
  <h2>Bolsa</h2>
</div>
<div class="container">

<table class="table table-striped table-hover" style="width:97%; margin-top:30px;">
  <thead class="table-dark">
    <tr>
        <th scope="col">ID</th>
        <th scope="col">DNI</th>
        <th scope="col">Nombre</th>
        <th scope="col">Apellidos</th>
        <th scope="col">Email</th>
        <th scope="col">Dirección</th>
        <th scope="col">Teléfono</th>
        <th scope="col">Población</th>
        <th scope="col">Documento</th>
        <th scope="col">Bolsa</th>
    </tr>
  </thead>
  <tbody>
  {% set counter = 0 %}
    {% for bolsa in bolsas %}
        {% set counter = counter + 1 %}
    <tr>
      <td>{{counter}}</td>

        <td>{{bolsa.dni}}</td>
        <td>{{bolsa.nombre}}</td>
        <td>{{bolsa.apellidos}}</td>
        <td>{{bolsa.email}}</td>
        <td>{{bolsa.direccion}}</td>
        <td>{{bolsa.telefono}}</td>
        <td>{{bolsa.poblacion}}</td>
        <td><a href="{{asset('files/'~bolsa.doc)}}">Ver documento</a></td>
        <td>{{bolsa.bolsa.puesto.puesto}}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
</div>
{% endblock %}