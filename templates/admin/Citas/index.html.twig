{% extends 'gestionmedicos.html.twig' %}

{% block contenido %}


<div class="container" style="margin-top:30px; margin-left:10px">
  <h2>Citas</h2>
</div>
<div class="container">

<table class="table table-striped table-hover" style="width:97%; margin-top:30px;">
  <thead class="table-dark">
    <tr>
      <th scope="col">ID</th>
        <th scope="col">Especialidad</th>
        <th scope="col">DNI</th>
        <th scope="col">Nombre</th>
        <th scope="col">Dirección</th>
        <th scope="col">Teléfono</th>
        <th scope="col">Email</th>
        <th scope="col">Detalles</th>
    </tr>
  </thead>
  <tbody>
  {% set counter = 0 %}
    {% for cita in citas %}
        {% set counter = counter + 1 %}
    <tr>
      <td>{{counter}}</td>
      <td>{{cita.especialidad}}</td>
      <td>{{cita.dni}}</td>
      <td>{{cita.nombre}}</td>
      <td>{{cita.direccion}}</td>
      <td>{{cita.telefono}}</td>
      <td>{{cita.email}}</td>
      <td>{{cita.detalles}}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
</div>
{% endblock %}