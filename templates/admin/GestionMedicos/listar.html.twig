{% extends 'gestionmedicos.html.twig' %}

{% block contenido %}

    <div class="container">

<h1>Lista de medicos</h1>

<a href="{{ path('newMedico') }}" class="btn btn-primary">Nuevo</a>
<table class="table table-striped table-hover" style="width:97%; margin-top:30px;">
<thead>
<tr>
<th>ID</th>
<th>NOMBRE</th>
<th>APELLIDO</th>
<th>ESPECIALIDAD</th>
<th>ACCIONES</th>
<tr>
</thead>
<tbody>
{% for medico in medicos %}
<tr>
<td>{{ medico.id }}</td>
<td>{{ medico.nombre }}</td>
<td>{{ medico.papellido }} {{medico.sapellido}}</td>
<td>
{% for especialidad in medico.especialidades %}
{{ especialidad }}<br>
{% endfor %}
</td>
<td>
<a href="{{ path('edit_medico', {'id': medico.id}) }}" class="btn btn-primary">Editar</a>
</tr>
{% endfor %}
</tbody>
</table>
</div>

{% endblock %}
