{% extends 'cuadromedico.html.twig' %}

{% block menu %}
{{ form_start(form) }}
<div class="mx-auto" style="width: 100%; max-width: 975px;">
    <div class="input-group">
        {{ form_widget(form.especialidad) }}
        {{ form_widget(form.buscar) }}
        <button class="btn btn-dark border-0 w-20">Buscar</button>
    </div>
</div>
{{ form_end(form) }}
{% endblock %}
{% block especialidades %}
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th{% if pagination.isSorted('especialidades') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(pagination, 'ESPECIALIDAD', 'especialidades') }}
            </th>
             <th{% if pagination.isSorted('nombre') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(pagination, 'NOMBRE', 'nombre') }}
            </th>
          </tr>
    </table>
{% endblock %}

{% block body %}
{% for medico in pagination %}
<div class="col-lg-6 team-item">
    <div class="row g-0 bg-light rounded overflow-hidden">
        <div class="col-12 col-sm-5 h-100">
            <img class="img-fluid h-100" src="img/team-3.jpg" style="object-fit: cover;">
        </div>
        <div class="col-12 col-sm-7 h-100 d-flex flex-column">
            <div class="mt-auto p-4">
              <h3>{{ medico.nombre }} {{ medico.papellido }} {{ medico.sapellido }}</h3>
                {% if medico.especialidades is defined %}
                {% for especialidades in medico.especialidades %}
              <h6 class="fw-normal fst-italic text-primary mb-4">{{especialidades}}</h6>
                {% endfor %}
                  {% else %}
              <h6 class="fw-normal fst-italic text-primary mb-4">{{medico.name}}</h6>
                {% endif %}
            </div>
            <div class="d-flex mt-auto border-top p-4">
                <a class="btn btn-lg btn-primary btn-lg-square rounded-circle me-3" href="#"><i class="fab fa-twitter"></i></a>
                <a class="btn btn-lg btn-primary btn-lg-square rounded-circle me-3" href="#"><i class="fab fa-facebook-f"></i></a>
                <a class="btn btn-lg btn-primary btn-lg-square rounded-circle" href="#"><i class="fab fa-linkedin-in"></i></a>
            </div>
        </div>
    </div>
</div>
{% endfor %}
{% endblock %}
{% block pagination %}
  <div class="navigation py-5" style="padding-left:15px">
    {{ knp_pagination_render(pagination) }}
  </div>
</div>
{% endblock %}